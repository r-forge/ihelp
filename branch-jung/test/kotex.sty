\ProvidesPackage{kotex}[2012/10/27 v0.1.1 Korean TeX (ko.TeX)]

\def\use@with@euc@only{%
 \if@ko@euc
   \PassOptionsToPackage{\CurrentOption}{kotex-euc}%
 \else
   \OptionNotUsed
   \PackageWarningNoLine{kotex}{Option not used: \CurrentOption}%
 \fi}
\def\use@with@utf@only{%
 \if@ko@euc
   \OptionNotUsed
   \PackageWarningNoLine{kotex}{Option not used: \CurrentOption}%
 \else
   \PassOptionsToPackage{\CurrentOption}{dhucs}%
 \fi}

\newif\if@ko@euc\@ko@eucfalse

\DeclareOption{euc}{\@ko@euctrue}
\DeclareOption{utf}{\@ko@eucfalse}
%
\DeclareOption{finemath}{\use@with@utf@only}
\DeclareOption{strictcharcheck}{\use@with@utf@only}
\DeclareOption{nonfrench}{\use@with@utf@only}
\DeclareOption{softbold}{\use@with@euc@only}
\DeclareOption{hardbold}{\use@with@euc@only}
\DeclareOption{hfont}{\use@with@euc@only}
\DeclareOption*{%
 \PassOptionsToPackage{\CurrentOption}{dhucs}%
 \PassOptionsToPackage{\CurrentOption}{kotex-euc}%
}

\InputIfFileExists{kotex.cfg}{}{}
\ProcessOptions\relax

\if@ko@euc \RequirePackage{kotex-euc}\else \RequirePackage{dhucs}\fi

